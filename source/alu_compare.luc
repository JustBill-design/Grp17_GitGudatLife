module alu_compare (
    input z,
    input v,
    input n,
    input alufn[6],
    output cmp,
    output illop
) {
    
    always {
        
        // default to no illop
        illop = 0

        case (alufn[2:1]) {
            b01: cmp = z
            b10: cmp = n ^ v
            b11: cmp = z | (n ^ v)
            default:
                cmp = 0
                illop = 1
        }
        
    }
}